<% include header.ejs %>


<!-- Page Content -->
<div class="container">

  <div class="row">

    <div class="col-lg-3">

      <h1 class="my-4"><%= __('Welcome to') %> <%= title %></h1>
      <div class="list-group">
        <a href="/api/products?tag=lifestyle" class="list-group-item"><%= __('Lifestyle') %></a>
        <a href="/api/products?tag=work" class="list-group-item"><%= __('Work') %></a>
        <a href="/api/products?tag=mobile" class="list-group-item"><%= __('Mobile') %></a>
        <a href="/api/products?tag=motor" class="list-group-item"><%= __('Motor') %></a>
      </div>

    </div>

    <div class="col-lg-9">

      <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">


        <div class="row">
          <% for(var i=0; i < db.length; i++) { %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              <a><img class="card-img-top" src=<%- `/img/${db[i].photo}` %> height=200px alt="<%= db[i].photo %>">
                <div class="card-body">
                  <h4 class="card-title">
                    <a><%= db[i].name %></a>
                  </h4>
                  <h6><%= __('Price') %>: <%= `${db[i].price} â‚¬` %> - <%= db[i].sell ? __('On sale'): __('Wanted') %>
                  </h6>
                  <p><%= __('Tags')%>: <%= `*${db[i].tags}*` %></p>
                </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>



  <% include footer.ejs %>